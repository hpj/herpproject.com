{
  "name": "hpj.gitlab.io",
  "version": "0.1.0",
  "description": "",
  "main": "index.js",
  "private": true,
  "scripts": {
    "clean": "rm -rf ./build && mkdir ./build",
    "svgo": "svgo --config='{ \"plugins\": [ { \"removeAttrs\": { \"attrs\": \"(fill|stroke)\" } }, { \"removeViewBox\": false } ] }' ./assets",
    "sprite": "svgstore ./assets/* -o ./build/icons.svg",
    "start": "npm run sprite & npx copy-and-watch --watch src/styles/*.css build/styles & npx pug src --out build --pretty --watch & npx budo ./src/index.js:bundle.js --dir build --dir public --live -- -t babelify",
    "build": "npm run clean && npm run svgo && npm run sprite && npx copy-and-watch src/styles/*.css build/styles && cp public/* build -r && npx pug src --out build && npx browserify ./src/index.js -t babelify -p tinyify -o build/bundle.js"
  },
  "homepage": "https://gitlab.com/hpj/hpj.gitlab.io#readme",
  "repository": {
    "type": "git",
    "url": "git+ssh://git@gitlab.com/hpj/hpj.gitlab.io.git"
  },
  "bugs": {
    "url": "https://gitlab.com/hpj/hpj.gitlab.io/issues"
  },
  "author": "Herp Project",
  "license": "MIT",
  "devDependencies": {
    "@babel/core": "^7.9.0",
    "@babel/preset-env": "^7.9.5",
    "babel-eslint": "^10.1.0",
    "babelify": "^10.0.0",
    "browserify": "^16.5.1",
    "budo": "^11.6.3",
    "copy-and-watch": "^0.1.4",
    "eslint": "^6.8.0",
    "pug": "^2.0.4",
    "pug-cli": "^1.0.0-alpha6",
    "pug-lint": "^2.6.0",
    "pug-lint-config-clock": "^2.0.0",
    "svgo": "^1.3.2",
    "svgstore-cli": "^1.3.1",
    "tinyify": "^2.5.2"
  }
}
