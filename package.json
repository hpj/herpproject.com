{
  "name": "hpj",
  "version": "0.1.0",
  "description": "",
  "main": "index.js",
  "private": true,
  "scripts": {
    "clean": "rm -rf ./build && mkdir ./build",
    "svgo": "svgo --config='{ \"plugins\": [ { \"removeAttrs\": { \"attrs\": \"(fill|stroke)\" } }, { \"removeViewBox\": false } ] }' ./assets",
    "sprite": "echo $(svgstore ./assets/*.svg) > build/icons.svg",
    "start": "npm run sprite & npx copy-and-watch --watch src/styles/*.css build/styles & npx pug src --out build --pretty --watch & npx http-server build",
    "build": "npm run clean && npm run svgo && npm run sprite && npx copy-and-watch src/styles/*.css build/styles && cp public/* build -r && npx pug src --out build"
  },
  "homepage": "https://gitlab.com/hpj/hpj.gitlab.io#readme",
  "repository": {
    "type": "git",
    "url": "git+ssh://git@gitlab.com/hpj/hpj.gitlab.io.git"
  },
  "bugs": {
    "url": "https://gitlab.com/hpj/hpj.gitlab.io/issues"
  },
  "author": "Herp Project",
  "license": "MIT",
  "devDependencies": {
    "copy-and-watch": "^0.1.4",
    "http-server": "^0.12.3",
    "pug": "^2.0.4",
    "pug-cli": "^1.0.0-alpha6",
    "pug-lint": "^2.6.0",
    "pug-lint-config-clock": "^2.0.0",
    "svgo": "^1.3.2",
    "svgstore-cli": "^1.3.1"
  }
}
