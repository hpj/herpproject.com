              source(srcset='/assets/screenshots/airtegal-dark-2.png' media='(prefers-color-scheme: dark)')
              img(src='/assets/screenshots/airtegal-light-2.png' alt='Airtegal Round Winner - Landscape')

          .project.screenshot(onclick='openScreenshot(\'/assets/screenshots/airtegal-$mode-3.png\')')
