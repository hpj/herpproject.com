            picture()
              source(srcset='/assets/screenshots/airtegal-dark-1.png' media='(prefers-color-scheme: dark)')
              img(src='/assets/screenshots/airtegal-light-1.png' alt='Airtegal Picking Phase - Landscape')

          .project.screenshot(onclick='openScreenshot(\'/assets/screenshots/airtegal-$mode-2.png\')')
