extends ../layout.pug

append head
  title Abram by Herp Project

  meta(name='title' content='Abram by Herp Project')
  meta(name='description' content='Coming Soon')

  meta(property='og:type' content='website')
  meta(property='og:title' content='Abram by Herp Project')
  meta(property='og:description' content='Coming Soon')
  meta(property='og:image' content='https://herpproject.com/assets/card-abram.png')

  link(rel='stylesheet' href='../styles/body.css')
  link(rel='stylesheet' href='../styles/icons.css')
  link(rel='stylesheet' href='../styles/project.css')

append content
  .projects.container
    .project.container
      .project.circle
        +icon('abram')
      .project.card
        p Abram
        .project.tags #React Native #Serverless #GraphQL #Jest
      .project.info
        p In development since February, 2020.
        p Not yet released.
        br
        p Coming Soon.

        .project.links
          a.project.link(href='https://www.facebook.com/UseAbram')
            +icon('facebook')

          a.project.link(href='/abram/principles')
            p Ethics & Principles

        hr
        br
        p
          | This project is referred to internally as "Ibrahim".
          br
          | It's the second app to had been named after a Prophet in Islam.
