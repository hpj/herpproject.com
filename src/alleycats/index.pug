extends ../layout.pug

append head
  title Alley Cats by Herp Project

  meta(name='title' content='Alley Cats by Herp Project')
  meta(name='description' content='Another tabletop roleplaying game.')

  meta(property='og:type' content='website')
  meta(property='og:title' content='Alley by Herp Project')
  meta(property='og:description' content='Welcome to a world that makes no sense.')
  meta(property='og:image' content='https://herpproject.com/assets/card.png')

  link(rel='stylesheet' href='../styles/body.css')
  link(rel='stylesheet' href='../styles/icons.css')
  link(rel='stylesheet' href='../styles/project.css')

mixin screenshots(name)
  div(class=name id='inbox' onclick='openScreenshot(this)')
    img(src='/assets/screenshots/alleycats-1.png' alt='Alley Cats Adai Set')

append content
  script.
     document.addEventListener('keyup', function(e)
    {
      if (e.code === 'Escape')
        closeScreenshot();
    })

    function openScreenshot(e)
    {
      const elem = document.querySelector('.screenshot.wrapper');

      if (!elem.classList.contains('active'))
      {
        location.hash = '#' + e.id;
        elem.classList.add('active');
      }
    }

    function closeScreenshot()
    {
      const elem = document.querySelector('.screenshot.wrapper');

      if (elem.classList.contains('active'))
        elem.classList.remove('active');
    }

  .screenshot.wrapper(onclick='closeScreenshot()')
    .screenshot.container
      +screenshots

  .projects.container
    .project.container
      .project.circle
        +icon('alleycats')
      .project.card
        p Alley Cats
        .project.tags #TTRPG
      .project.notice
        p The first campaign will be released publicly after our live streams.
      .project.info
        p In development since Augest, 2021.
        br
        p Welcome to a world that makes no sense.
        br
        p Alley Cats is our spin on a tabletop roleplaying games with our own rules, characters, and stories.
        br
        p Set in the world of The "supposed" Story So Far.
        br
        p Each campaign released will be unique in its own way, set in its own time and place, with its own 
          strong original 
          | story and characters.

        .project.links
          a.project.link(href='https://www.youtube.com/playlist?list=PLUCPIFXea-M7AMB8mVDHl8pDX0OO7GsEk')
            +icon('youtube')
            p Watch

        hr
        .project.screenshots
          +screenshots('project screenshot')

        hr
        br
        p
          | There's a real possibility that we'll develop an app for the game in the future.
        br
        p
          | Like Airtegal this project started because our team wanted to play a TTRPG together.
