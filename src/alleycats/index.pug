extends ../layout.pug

append head
  title Alley Cats by Herp Project

  meta(name='title' content='Alley Cats by Herp Project')
  meta(name='description' content='A Egyptian parody of tabletop roleplaying games like Dungeons & Dragons.')

  meta(property='og:type' content='website')
  meta(property='og:title' content='Alley Cats by Herp Project')
  meta(property='og:description' content='Welcome to a world that makes no sense.')
  meta(property='og:image' content='https://herpproject.com/assets/card-alleycats.png')

  link(rel='stylesheet' href='../styles/body.css')
  link(rel='stylesheet' href='../styles/icons.css')
  link(rel='stylesheet' href='../styles/project.css')

append content
  .projects.container
    .project.container
      .project.circle
        +icon('alleycats')
      .project.card
        p Alley Cats
        .project.tags #TTRPG #Entreatment #Series
      .project.info
        p Welcome to a world that makes no sense.
        br
        p Alley Cats is an Egyptian parody of tabletop roleplaying games like Dungeons & Dragons.
        br
        p Each campaign we play will be unique in its own way, set in a different time and place, with its own 
          strong original 
          | story and characters; Set in the same world as The Story So Far.

        .project.links
          a.project.link(href='https://www.youtube.com/channel/UClCZ_sL82h3MLHfBf7qfFZQ')
            +icon('youtube')
            p Channel

        hr
        .project.screenshots
          iframe(width='100%', height='100%' src='https://www.youtube-nocookie.com/embed/iy3nhLdP2V4' frameborder='0' allow='accelerometer; autoplay; clipboard-write; encrypted-media; gyroscope; picture-in-picture' allowfullscreen='')

        br
        hr
        br
        p
          | The Alley Cats Team moved their own channel and brand after Herp Project closed down.
        