extends ./layout.pug

append head
  title Herp Project

  meta(name='title' content='Herp Project')
  meta(name='description' content='Herp Project. blah blah, blaah!')

  meta(property='og:type' content='website')
  meta(property='og:title' content='Herp Project')
  meta(property='og:description' content='Art, Technology, and Perfection.')
  meta(property='og:image' content='https://herpproject.com/assets/card.png')

  link(rel='stylesheet' href='../styles/body.css')
  link(rel='stylesheet' href='../styles/icons.css')
  link(rel='stylesheet' href='../styles/projects.css')

append content
  .projects.container
    a.project.container(href='./airtegal')
      .project.circle
        +icon('airtegal')
      .project.card
        p Airtegal
      .project.info
        br
        p HAHAhahahhaHHAhha........

    a.project.container(href='./mori')
      .project.circle
        +iconText('m')
      .project.card
        p Mori

    a.project.container(href='./alleycats')
      .project.circle
        +icon('alleycats')
      .project.card
        p Alley Cats
      .project.info
        br
        p Welcome to a world that makes no sense.

    a.project.container(href='./tssf')
      .project.circle
        +icon('question-mark')
      .project.card
        p The Story So Far
      .project.info
        p Canceled.
        br
        p The Story So Far was supposed to be an episodic adventure game based on 4 different original stories in the same world.
    
    a.project.container(href='./dawayer')
      .project.circle
        +icon('dawayer')
      .project.card
        p Dawayer
      .project.info
        p Discontinued.
        br
        p Dawayer was an audio player built with web technologies it lets you play local files, and stream podcasts.